<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <OurUmbracoSkipperContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Our.Umbraco.Skipper\**\*.*</OurUmbracoSkipperContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyOurUmbracoSkipperAssets" BeforeTargets="Build">
        <ItemGroup>
            <OurUmbracoSkipperContentFiles Include="$(OurUmbracoSkipperContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Our.Umbraco.Skipper files: $(OurUmbracoSkipperContentFilesPath) - #@(OurUmbracoSkipperContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(OurUmbracoSkipperContentFiles)"
            DestinationFiles="@(OurUmbracoSkipperContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.Skipper\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearOurUmbracoSkipperAssets" BeforeTargets="Clean">
        <ItemGroup>
            <OurUmbracoSkipperDir Include="$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.Skipper\" />
        </ItemGroup>
        <Message Text="Clear old Our.Umbraco.Skipper data"  Importance="high" />
        <RemoveDir Directories="@(OurUmbracoSkipperDir)"  />
    </Target>

</Project>
