<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <ContentTargetFolders>.</ContentTargetFolders>
        <Product>Our.Umbraco.Skipper</Product>
        <PackageId>Our.Umbraco.Skipper</PackageId>
        <Title>Umbraco.Skipper</Title>
        <Description>An Umbraco package that modifies the IUrlSegmentProvider to provide the possibility to skip a segment during the url generation.</Description>
        <PackageTags>umbraco plugin package</PackageTags>
        <Version>1.0.0</Version>
        <Authors>ZioTino</Authors>
        <RootNamespace>Our.Umbraco.Skipper</RootNamespace>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageIcon>icon.png</PackageIcon>
        <RepositoryUrl>https://github.com/ZioTino/Our.Umbraco.Skipper</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Umbraco.Cms.Web.Website" Version="9.0.1"/>
        <PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="9.0.1"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="..\LICENSE.md" Pack="true" PackagePath=""/>
        <None Include="..\docs\README.md" Pack="true" PackagePath=""/>
        <None Include="..\assets\icon.png" Pack="true" PackagePath="\"/>
    </ItemGroup>
</Project>
